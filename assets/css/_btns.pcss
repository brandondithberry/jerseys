@layer components {
  .btns {
    @apply flex mt-4;
  }
  .btn {
    @apply text-center rounded py-2 px-3 border-gray-900 border-2;
    &:hover {
      @apply text-white bg-gray-900;
    }

    &.btn--active {
      @apply text-white bg-gray border-gray;
      &:hover {
        @apply bg-gray-600;
      }
    }
    &.btn--disabled,
    &[disabled='true'],
    &:disabled {
      @apply text-gray-400 cursor-not-allowed;
    }
  }

  .btn:not(:last-child) {
    margin-right: 20px;
  }
}
